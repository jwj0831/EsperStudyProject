<?xml version="1.0" encoding="UTF-8"?><esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	xmlns="http://www.espertech.com/schema/esper"	xsi:schemaLocation="http://www.espertech.com/schema/esper http://www.espertech.com/schema/esper/esper-configuration-4-0.xsd">	<event-type-auto-name package-name="esper.study.event" />	<database-reference name="myTestDB">		<!-- For a complete list of properties see Apache DBCP. -->		<datasourcefactory-connection			class-name="org.apache.commons.dbcp.BasicDataSourceFactory">			<env-property name="username" value="root" />			<env-property name="password" value="root" />			<env-property name="driverClassName" value="com.mysql.jdbc.Driver" />			<env-property name="url"				value="jdbc:mysql://localhost:8889/cep_test" />			<env-property name="initialSize" value="2" />			<env-property name="validationQuery" value="select 1 from dual" />		</datasourcefactory-connection>		<connection-lifecycle value="pooled" />	</database-reference></esper-configuration>